extends layout

block content
  // Main Content
  .container
    .row
      .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
        each post in posts
          .post-preview
            a(href='/post')
              h2.post-title= post.heading
              h3.post-subtitle= post.subheading
            p.post-meta
              | Posted by&nbsp;
              a(href='#') #{post.posted_by}
              |  on #{post.posted_on}
          hr

